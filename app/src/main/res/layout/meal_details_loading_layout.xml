<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/shimmerColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuidLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuidLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view4"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/view5"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <TextView
            android:id="@+id/textView5"
            style="@style/largeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ingredients"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <View
            android:id="@+id/view8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_circular_img_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <View
            android:id="@+id/view6"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8" />

        <View
            android:id="@+id/view9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shimmer_circular_img_bg"
            app:layout_constraintEnd_toStartOf="@+id/view10"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <View
            android:id="@+id/view10"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintTop_toTopOf="@+id/view8" />

        <View
            android:id="@+id/view11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_circular_img_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <View
            android:id="@+id/view12"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintBottom_toBottomOf="@+id/view11"
            app:layout_constraintStart_toEndOf="@+id/view11"
            app:layout_constraintTop_toTopOf="@+id/view11" />

        <TextView
            android:id="@+id/textView6"
            style="@style/largeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view11" />

        <View
            android:id="@+id/view13"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <View
            android:id="@+id/view14"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view13" />

        <View
            android:id="@+id/view15"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view14" />

        <View
            android:id="@+id/view16"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/shimmer_text_bg"
            app:layout_constraintEnd_toStartOf="@+id/endGuidLine"
            app:layout_constraintStart_toStartOf="@+id/startGuidLine"
            app:layout_constraintTop_toBottomOf="@+id/view15" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>